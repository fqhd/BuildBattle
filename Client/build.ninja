cflags = -std=c++17 -O3 $$(pkg-config --cflags glfw3) -fdiagnostics-color=always -g -m64 -Wall -Werror
lflags = -lsfml-network -lsfml-system $$(pkg-config --libs glfw3) -ldl

rule cc
  command = clang++ -c $in -o $out $cflags

rule lnk
  command = clang++ -o out $in $lflags

build obj/main.o: cc main.cpp
build obj/glad.o: cc Engine/Libs/glad.cpp
build obj/blockoutline.o: cc BlockOutline.cpp
build obj/outlinerenderer.o: cc Engine/Utils/OutlineRenderer.cpp
build obj/blockoutlineshader.o: cc Engine/Utils/BlockOutlineShader.cpp
build obj/textureArray.o: cc Engine/Utils/TextureArray.cpp
build obj/frustum.o: cc Engine/Libs/Frustum.cpp
build obj/inputmanager.o: cc Engine/Input/InputManager.cpp
build obj/constants.o: cc Constants.cpp
build obj/model.o: cc Engine/Utils/Model.cpp
build obj/modelshader.o: cc Engine/Utils/ModelShader.cpp
build obj/transform.o: cc Engine/Utils/Transform.cpp
build obj/entity.o: cc Entity.cpp
build obj/entityhandler.o: cc EntityHandler.cpp
build obj/player.o: cc Player.cpp
build obj/chunk.o: cc Engine/World/Chunk.cpp
build obj/shader.o: cc Engine/Utils/Shader.cpp
build obj/utils.o: cc Engine/Utils/Utils.cpp
build obj/chunkshader.o: cc Engine/Utils/ChunkShader.cpp
build obj/game.o: cc Game.cpp
build obj/window.o: cc Engine/Input/Window.cpp
build obj/camera.o: cc Engine/Utils/Camera.cpp
build obj/world.o: cc Engine/World/World.cpp
build obj/cubemap.o: cc Engine/Utils/CubeMap.cpp
build obj/cube.o: cc Engine/Utils/Cube.cpp
build obj/cubemapshader.o: cc Engine/Utils/CubeMapShader.cpp
build obj/cubemaptexture.o: cc Engine/Utils/CubeMapTexture.cpp
build obj/particlehandler.o: cc Engine/Utils/ParticleHandler.cpp
