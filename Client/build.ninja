cflags = -std=c++17 -O3 $$(pkg-config --cflags glfw3) -fdiagnostics-color=always -g -m64
lflags = -lsfml-network -lsfml-system $$(pkg-config --libs glfw3) -ldl -pthread

rule cc
  command = clang++ -c $in -o $out $cflags

rule lnk
  command = clang++ -o out $in $lflags

build main.o: cc main.cpp
build glad.o: cc glad.cpp
build blockoutline.o: cc BlockOutline.cpp
build outlinerenderer.o: cc OutlineRenderer.cpp
build blockoutlineshader.o: cc BlockOutlineShader.cpp
